<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ITLA JOBS</title>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.25/css/jquery.dataTables.css" />
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/Home/Index">
            <img src="~/assets/images/ITLA-jobs-logo.png" alt="itla jobs logo" class="menu__img" />
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a href="/Home/Index" class="nav-link">Inicio</a>
                </li>
                <li class="nav-item">
                    <a href="/Vacantes/Index" class="nav-link">Vacantes</a>
                </li>
                <li class="nav-item">
                    <a href="/Vacantes/MisVacantes" class="nav-link">Mis vacantes</a>
                </li>
                <li class="nav-item">
                    @Html.Partial("_LoginPartial")
                </li>
            </ul>

        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
    </div>

    <footer class="footer mt-auto py-3">
        <div class="container">
            <span class="text-muted">@DateTime.Now.Year - ITLA JOBS | Todos los derechos reservados</span>
        </div>
    </footer>
    <div id="scroll-to-top" class="scroll-to-top">
        <i class="fas fa-arrow-up top-icon"></i>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.js"></script>
    <script src="~/Scripts/scripts.js" type="module"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
